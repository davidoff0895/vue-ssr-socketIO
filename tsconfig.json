{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "strict": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
